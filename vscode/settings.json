{
    // Better Defaults
    "update.mode": "none",
    "window.zoomLevel": 1,
    "files.insertFinalNewline": true,
    "editor.detectIndentation": false,
    "files.insertFinalNewlines": true,
    "diffEditor.renderSideBySide": false,
    "files.trimTrailingWhitespace": true,
    "window.newWindowDimensions": "inherit",
    "editor.multiCursorModifier": "ctrlCmd",  // hold Cmd and click to place new cursors
    "workbench.editor.enablePreview": false,
    "editor.emptySelectionClipboard": false,  // do not overwrite clipboard on accident when nothing is selected
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.copyWithSyntaxHighlighting": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,

    // Silence the Noise
    "editor.folding": false,
    //"editor.glyphMargin": false,
    "workbench.iconTheme": null,
    "editor.lineNumbers": "off",
    "breadcrumbs.enabled": false,
    "scm.diffDecorations": "none",
    "editor.hover.enabled": false,
    "editor.matchBrackets": "never",
    "window.restoreWindows": "none",
    "editor.minimap.enabled": false,
    "workbench.tips.enabled": false,
    "explorer.compactFolders": false,
    "git.decorations.enabled": false,
    // "editor.quickSuggestions": false,
    "workbench.startupEditor": "none",
    "editor.lightbulb.enabled": false,
    "editor.guides.indentation": false,
    "workbench.editor.showTabs": false, // instead navigate with Cmd+P
    "editor.selectionHighlight": false,
    // "editor.snippetSuggestions": "none",
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": false,
    "workbench.statusBar.visible": false,
    "workbench.sideBar.location": "right",
    "problems.decorations.enabled": false,
    "editor.parameterHints.enabled": false,
    "workbench.activityBar.visible": false,
    "editor.renderControlCharacters": false,
    "extensions.ignoreRecommendations": true,
    "editor.hideCursorInOverviewRuler": true,
    "workbench.panel.opensMaximized": "never",
    "workbench.panel.defaultLocation": "right",
    "editor.suggestOnTriggerCharacters": false,
    "editor.guides.bracketPairsHorizontal": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.highlightActiveBracketPair": false,
    "editor.guides.highlightActiveIndentation": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,

    // No Suggestions
    "editor.suggest.showEnums": false,
    "editor.suggest.showFiles": false,
    "editor.suggest.showIcons": false,
    "editor.suggest.showWords": false,
    //"editor.suggest.showUnits": false,  // must be enabled for greek letters completions in Julia
    "editor.suggest.showUsers": false,
    "editor.suggest.showColors": false,
    "editor.suggest.showEvents": false,
    "editor.suggest.showFields": false,
    "editor.suggest.showIssues": false,
    "editor.suggest.showValues": false,
    "editor.suggest.showClasses": false,
    "editor.suggest.showFolders": false,
    "editor.suggest.showMethods": false,
    "editor.suggest.showModules": false,
    "editor.suggest.showStructs": false,
    "editor.suggest.showKeywords": false,
    "editor.suggest.showSnippets": false,
    "editor.suggest.showConstants": false,
    "editor.suggest.showFunctions": false,
    "editor.suggest.showOperators": false,
    "editor.suggest.showVariables": false,
    "editor.suggest.showDeprecated": false,
    "editor.suggest.showInterfaces": false,
    "editor.suggest.showProperties": false,
    "editor.suggest.showReferences": false,
    "editor.suggest.showEnumMembers": false,
    "editor.suggest.showConstructors": false,
    "editor.suggest.showCustomcolors": false,
    "editor.suggest.showInlineDetails": false,
    "editor.suggest.showTypeParameters": false,

    // Window
    // "window.titleBarStyle": "custom",
    "window.title": "",
    "workbench.colorTheme": "Poolside", // https://marketplace.visualstudio.com/items?itemName=nsgrantham.poolside
    "workbench.colorCustomizations": {
        // Adjust color to blend in with Editor and Terminal
        //"titleBar.activeBackground": "#2D2D48",
        //"titleBar.inactiveBackground": "#2D2D48",
        "panelTitle.activeBorder": "#0000",
        //"scrollbar.shadow": "#353454",
        //"panel.border": "#474670",
        //"editorGroup.border": "#474670",
        "editorGroupHeader.noTabsBackground": "#0000",//#2d2d48",
        //"editorGroupHeader.tabsBackground": "#2d2d48",
        // Make all marks in the gutter and scrollbar area invisible
        // https://stackoverflow.com/a/51684408
        // (Uses #RGBA shorthand rather than #RRGGBBAA)
        "editorGutter.addedBackground": "#0000",
        "editorGutter.deletedBackground": "#0000",
        "editorGutter.modifiedBackground": "#0000",
        "editorOverviewRuler.border": "#0000",
        "editorOverviewRuler.addedForeground": "#0000",
        "editorOverviewRuler.deletedForeground": "#0000",
        "editorOverviewRuler.modifiedForeground": "#0000",
        "editorOverviewRuler.infoForeground": "#0000",
        "editorOverviewRuler.errorForeground": "#0000",
        "editorOverviewRuler.warningForeground": "#0000",
        "editorOverviewRuler.findMatchForeground": "#0000",
        "editorOverviewRuler.bracketMatchForeground": "#0000",
        "editorOverviewRuler.wordHighlightForeground": "#0000",
        "editorOverviewRuler.rangeHighlightForeground": "#0000",
        "editorOverviewRuler.selectionHighlightForeground": "#0000",
        "editorOverviewRuler.wordHighlightStrongForeground": "#0000"
    },

    // Customize UI
    // https://marketplace.visualstudio.com/items?itemName=iocave.customize-ui
    "window.titleBarStyle": "native",
    "customizeUI.titleBar": "frameless",
    "customizeUI.listRowHeight": 20, // line height in sidebar (VSC default is 22)
    //"customizeUI.font.regular": "Inter",
    //"customizeUI.font.monospace": "InputMono-Regular",
    "customizeUI.stylesheet": {
        //".editor .title": "background: transparent !important;",
        // ".editor .title .label-container": "visibility: hidden;",
        // Change colors of file name and path in Editor title
        //".editor .title .label-container .label-name": "color: #f2f2f7;",
        ".editor .title .label-container .label-description": "color: #ffffff80;",
        // Hide top-right buttons in Editor
        ".editor .title .actions-container .action-item a": "visibility: hidden;",
        // Hide top-right buttons in Terminal
        ".panel .title .title-actions .actions-container .action-item a": "visibility: hidden;",
        ".panel .title .global-actions .actions-container .action-item a": "visibility: hidden;",
        // Edit Terminal title
        ".panel .title .composite-bar .actions-container .action-item a": "text-transform: none; font-size: 12px;",
        // Expand height of Terminal content
        // ".monaco-workbench .editor-instance .terminal-wrapper, .monaco-workbench .pane-body.integrated-terminal .terminal-wrapper": "height: auto;",
        // Only show the scrollbar on hover
        ".editor .scrollbar .slider": "visibility: hidden;",
        ".editor .scrollbar:hover .slider": "visibility: initial;",
        ".panel .scrollbar .slider": "visibility: hidden;",
        ".panel .scrollbar:hover .slider": "visibility: initial;"
    },

    // Spacing
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    //"editor.padding.top": 15,
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",

    // Misc.
    "editor.cursorStyle": "line",  // has no effect if Vim extension is enabled AFAIK
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",

    // Typography
    "editor.fontFamily": "InputMono-ExtraLight",  // available at https://input.djr.com/
    "editor.fontSize": 12,
    "editor.lineHeight": 18,
    "editor.suggestFontSize": 12,
    "editor.suggestLineHeight": 18,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.lineHeight": 1,

    // Integrated Terminal
    "terminal.integrated.inheritEnv": false,  // inheritEnv clashes with conda environments
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.showLinkHover": false,
    "terminal.integrated.cursorBlinking": true,
    // "terminal.integrated.defaultLocation": "editor",  // open on right, not bottom (don't think this works)
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],

    // File Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    // Search
    "search.useIgnoreFiles": false,

    // Formatting
    "editor.defaultFormatter": null,

    // JavaScript
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // Python
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/Users/neal/.local/bin/black",
    "python.analysis.useImportHeuristic": true,  // https://github.com/microsoft/pylance-release/issues/519#issuecomment-828355840
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/Users/neal/.local/bin/flake8",
    "python.linting.flake8Args": [
        "--extend-ignore", "E203,W503",
        "--max-line-length", "88"
    ],
    "python.terminal.launchArgs": [
        "-m",
        "IPython",
        "--no-autoindent"
    ],
    // "python.dataScience.sendSelectionToInteractiveWindow": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.formatOnPaste": false,
        // "editor.defaultFormatter": null,
        "editor.formatOnSaveMode": "file"
    },

    // R
    // https://marketplace.visualstudio.com/items?itemName=Ikuyadeu.r
    "r.sessionWatcher": true,
    "r.helpPanel.enableSyntaxHighlighting": false,
    "r.rmarkdown.chunkBackgroundColor": "#44436c80", // match with theme, must be slightly transparent
    // Disable linting (not sure if all 3 of the following are necessary)
    "r.lsp.diagnostics": false,
    "r.lintr.enabled": false,
    "r.rmarkdown.lintr.enabled": false,

    // Julia
    "julia.executablePath": "/Applications/Julia-1.6.app/Contents/Resources/julia/bin/julia",
    "julia.execution.resultType": "REPL",
    "julia.execution.codeInREPL": true,
    "julia.enableTelemetry": false,
    "julia.symbolCacheDownload": true,
    // "julia.completionmode": "exportedonly",
    "julia.runtimeCompletions": false,
    "julia.lint.run": false,

    // SQL
    "sql.linter.executablePath": "/Users/neal/.local/bin/sqlfluff",
    "sql.linter.run": "onSave",
    // Use the emeraldwalk.RunOnSave extension to format SQL files
    // on save with sqlfmt (https://github.com/tconbeer/sqlfmt)
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.sql",
                "isAsync": true,
                "cmd": "sqlfmt ${file}"
            },
            {
                "match": ".*\\.sql\\.jinja",
                "isAsync": true,
                "cmd": "sqlfmt ${file}"
            }
        ]
    },

    // dbt
    "files.associations": {
        "*.sql": "jinja-sql",
        "**/target/**": ""  // do not highlight compiled model files
    },

    // Color Highlight Extension
    "color-highlight.markRuler": false
}
